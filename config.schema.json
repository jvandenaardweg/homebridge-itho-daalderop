{
  "pluginAlias": "HomebridgeIthoDaalderop",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Please [read the README](https://github.com/jvandenaardweg/homebridge-itho-daalderop#readme) of the plugin for more information and instructions on how to configure it.",

  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Bridge name",
        "type": "string",
        "required": true,
        "placeholder": "Itho Daalderop",
        "description": "You'll see this name when you add the bridge in your Home app and also in the logs within Homebridge.",
        "default": "Itho Daalderop"
      },
      "api": {
        "type": "object",
        "title": "MQTT Broker settings",
        "description": "",
        "properties": {
          "protocol": {
            "title": "API Protocol",
            "type": "string",
            "required": true,
            "default": "mqtt",
            "oneOf": [
              {
                "title": "HTTP",
                "enum": ["http"]
              },
              {
                "title": "MQTT",
                "enum": ["mqtt"]
              }
            ]
          },
          "ip": {
            "type": "string",
            "title": "IP Address",
            "placeholder": "192.168.0.10",
            "format": "ipv4",
            "required": true
          },
          "port": {
            "type": "number",
            "title": "Port",
            "placeholder": "1883 (mqtt) or 80 (http)",
            "required": true
          },
          "username": {
            "type": "string",
            "title": "Username",
            "placeholder": "Optional",
            "required": false
          },
          "password": {
            "type": "string",
            "title": "Password",
            "placeholder": "Optional",
            "required": false
          }
        }
      }
    }
  },
  "layout": [
    {
      "type": "flex",
      "flex-flow": "row wrap",
      "orderable": false,
      "items": [
        {
          "key": "name",
          "type": "name"
        }
      ]
    },
    {
      "type": "fieldset",
      "title": "API Settings",
      "description": "Select which API protocol you want to use for this plugin. The HTTP API requires no additional setup. In order to use MQTT you must have set up a MQTT broker on your network. The Itho Wifi module must be configured to use the same MQTT broker.",
      "expandable": false,
      "orderable": false,
      "items": [
        {
          "type": "flex",
          "flex-flow": "row wrap",
          "items": [
            {
              "type": "flex",
              "flex-flow": "row wrap",
              "items": [
                {
                  "key": "api.protocol"
                },
                {
                  "key": "api.ip"
                },
                {
                  "key": "api.port"
                }
              ]
            },
            {
              "type": "flex",
              "flex-flow": "row wrap",
              "items": [
                {
                  "key": "api.username"
                },
                {
                  "key": "api.password"
                },
                {
                  "key": "",
                  "description": "The Itho WiFi module allows setting a username and password for using the API. If you have set this, enter the username and password here."
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
